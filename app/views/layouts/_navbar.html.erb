<header>
    <!-- Navbar goes here -->
    <nav class="bg-blue-600 drop-shadow-lg">
			<div class="max-w-6xl mx-auto px-4">
				<div class="flex justify-between">
					<div class="flex space-x-7">
						<div>
							<!-- DNR Logo -->
                            <%= image_tag "dnrlogo.png", class: "h-14 w-14 mr-2.5 p-1"%>
						</div>
						<!-- Primary Navbar items -->
						<ul class="hidden md:flex items-center space-x-1.5">
							<li class="py-2 px-2 text-white font-semibold hover:text-green-400 border-b-2 border-transparent hover:border-current select-none"><%= link_to "Nosotros", root_path %></li>
							<li class="py-2 px-2 text-white font-semibold hover:text-green-400 border-b-2 border-transparent hover:border-current select-none"><%= link_to "Servicios", root_path %></li>
							<li class="py-2 px-2 text-white font-semibold hover:text-green-400 border-b-2 border-transparent hover:border-current select-none"><%= link_to "Blog", root_path %></li>
							<li class="py-2 px-2 text-white font-semibold hover:text-green-400 border-b-2 border-transparent hover:border-current select-none"><%= link_to "Contacto", root_path %></li>
						</ul>
					</div>
					<!-- Secondary Navbar items -->
					<div class="hidden md:flex items-center space-x-3 ">
						<a class="py-2 px-2 font-medium text-white rounded hover:bg-green-500 hover:text-white transition duration-300" href="/users/sign_in">Log In</a>
						<a class="py-2 px-2 font-medium text-white bg-green-500 rounded hover:bg-green-400 transition duration-300">Sign Up</a>
					</div>
					<!-- Mobile menu button -->
					<div class="md:hidden flex items-center">
						<button class="outline-none mobile-menu-button">
							<svg class=" w-6 h-6 text-white hover:text-green-500 "
								x-show="!showMenu"
								fill="none"
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								viewBox="0 0 24 24"
								stroke="currentColor"
							>
								<path d="M4 6h16M4 12h16M4 18h16"></path>
							</svg>
						</button>
					</div>
				</div>
			</div>
			<!-- Mobile menu -->
			<div class="hidden mobile-menu">
				<ul class="">
					<li class="block text-sm px-2 py-4 text-white hover:bg-green-400"><%= link_to "Nosotros", root_path %></li>
					<li class="block text-sm px-2 py-4 text-white hover:bg-green-400"><%= link_to "Servicios", root_path %></li>
					<li class="block text-sm px-2 py-4 text-white hover:bg-green-400"><%= link_to "Blog", root_path %></li>
					<li class="block text-sm px-2 py-4 text-white hover:bg-green-400"><%= link_to "Contacto", root_path %></li>
				</ul>
			</div>
			<script>
				const btn = document.querySelector("button.mobile-menu-button");
				const menu = document.querySelector(".mobile-menu");

				btn.addEventListener("click", () => {
					menu.classList.toggle("hidden");
				});
			</script>
		</nav>
</header>	